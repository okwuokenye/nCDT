<UserControl x:Class="NewCDT.Controls.CharacterViewerUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewCDT.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="485" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="Character Image Viewer" FontSize="20" HorizontalAlignment="Center" Margin="0 10"/>
        <Image Stretch="Fill" Height="400">
            <Image.Source>
                <BitmapImage UriSource="{Binding ImageSource}"/>
            </Image.Source>
        </Image>
        <Button HorizontalAlignment="Right" Width="50" Content="XX" Height="30" Margin="10 5"/>
    </StackPanel>
</UserControl>
